<h2 class="text-center">Users</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">E-mail address</th>
      <th scope="col">Phone number</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
    <tr>
      <th><%= user.id %></th>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.phone_number %></td>
      <td>
        <div class="d-flex">
          <a
            href="/users/edit/<%= user.id %>"
            class="btn btn-sm btn-primary m-1"
          >
            Edit
          </a>

          <form action="/api/users/<%= user.id %>?method=DELETE" method="post">
            <button type="submit" class="btn btn-sm btn-danger m-1">
              Delete
            </button>
          </form>
        </div>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<div class="d-grid">
  <a href="/users/create" class="btn btn-primary btn-sm">Register new user</a>
</div>
