<h2 class="text-center">Departments</h2>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% departments.forEach(department => { %>
    <tr>
      <th><%= department.id %></th>
      <td><%= department.name %></td>
      <td>
        <div class="d-flex">
          <a
            href="/departments/edit/<%= department.id %>"
            class="btn btn-sm btn-primary m-1"
          >
            Edit
          </a>

          <form
            action="/api/departments/<%= department.id %>?method=DELETE"
            method="post"
          >
            <button type="submit" class="btn btn-sm btn-danger m-1">
              Delete
            </button>
          </form>
        </div>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<div class="d-grid">
  <a href="/departments/create" class="btn btn-primary btn-sm"
    >Create a new department</a
  >
</div>
